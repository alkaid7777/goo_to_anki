{
  "manifest_version": 3,
  "name": "Goo.ne Dictionary Button Extension",
  "version": "1.0",
  "description": "Add a button next to the goo.ne dictionary",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://dictionary.goo.ne.jp/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://dictionary.goo.ne.jp/*"],
      "js": ["content.js"]
    }
  ]
}
